<view class="container"><block wx:if="{{showTop}}"><view class="panel-top"><input class="panel-top-input" type="text" value="" placeholder="输入彩蛋码" confirm-type="done" data-event-opts="{{[['confirm',[['checkCode',['$event']]]]]}}" bindconfirm="__e"/></view></block><block wx:if="{{easteregg}}"><view class="panel"><view class="panel-title"><text>彩蛋系列</text></view><view class="cell"><view data-event-opts="{{[['tap',[['selectCoin',['$0'],['caidan']]]]]}}" class="{{['coin-box',(coinIndex===520)?'selectActive':'']}}" bindtap="__e"><image class="coin-img" src="{{caidan.src}}" mode="aspectFit"></image><text>{{caidan.name}}</text><block wx:if="{{caidan.value===coinName}}"><text class="coin-spec">使用中</text></block></view></view></view></block><block wx:for="{{coins}}" wx:for-item="item" wx:for-index="__i0__" wx:key="guid"><view class="panel"><view class="panel-title"><text>{{item.name}}</text></view><view class="cell"><block wx:for="{{item.list}}" wx:for-item="item2" wx:for-index="__i1__" wx:key="id"><view data-event-opts="{{[['tap',[['selectCoin',['$0'],[[['coins','guid',item.guid],['list','id',item2.id]]]]]]]}}" class="{{['coin-box',(coinIndex===item2.id)?'selectActive':'',(!item2.status)?'grayfilter':'']}}" bindtap="__e"><image class="coin-img" src="{{item2.src}}" mode="aspectFit" lazy-load></image><text>{{item2.name}}</text><block wx:if="{{item2.value===coinName}}"><text class="coin-spec">使用中</text></block><block wx:if="{{!item2.status}}"><view class="coin-lock"><text class="iconfont icon-suoding"></text></view></block></view></block></view></view></block><block wx:if="{{coinIndex!==-1}}"><view class="footer"><block wx:if="{{lockStatus}}"><button class="footer-btn" style="background:#fd746c;" type="primary" data-event-opts="{{[['tap',[['setCoin']]]]}}" bindtap="__e">立即使用</button></block><block wx:if="{{!lockStatus}}"><button class="footer-btn" style="background:#fd746c;" type="primary" data-event-opts="{{[['tap',[['unlockCoin']]]]}}" bindtap="__e">解锁并使用</button></block></view></block></view>